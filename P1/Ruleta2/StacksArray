package ruleta1;

import javax.swing.JOptionPane;
import stack.Stack;

public class StacksArray {
	
	public static void main(String[] args){
		
		JOptionPane.showMessageDialog(null, "Representación del funcionamiento del nuevo sistema de Gimnasios", "PoGo Gym System Eplained", JOptionPane.PLAIN_MESSAGE);
		String gn = JOptionPane.showInputDialog("¿Cuántos gimnasios controlarán tú y tu equipo?");
		String tn = JOptionPane.showInputDialog("¿Cuántas personas hay en tu equipo?");
		
		int gyms = Integer.parseInt(gn);
		int trainers = Integer.parseInt(tn);

		String trainersArray[] = new String[trainers];
		
		for (int c = 0; c < trainers; c++){
			String nn = JOptionPane.showInputDialog("¿Cuál es el nombre del integrante número "+(c+1)+" de tu equipo?");
			trainersArray[c] = nn;	
		}
		
		String pn = JOptionPane.showInputDialog("¿Cuántos Pokémon pondrán en gimnasios?");
		int mons = Integer.parseInt(pn);
		
		Stack<String> stackarray[];
		
		for(int d = 0; d < mons; d++){
			String an = JOptionPane.showInputDialog("¿En qué gimnasio entrará el Pokémon?");
			String sn = JOptionPane.showInputDialog("¿A qué entrenador pertenece el Pokémon?");
			int arraypos = Integer.parseInt(an);
			int train = Integer.parseInt(sn);
			
			stackarray[arraypos] = Stack<String>;

		}
		
		
		
		
	}
